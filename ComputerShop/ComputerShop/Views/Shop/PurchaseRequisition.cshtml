
@{
    ViewBag.Title = "Заявки на покупку";
    Layout = "~/Views/Shared/_LayoutShop.cshtml";
}
<br />
<br />
<div class="row">
    <div class="col-lg-6">
        <h2>Заявки на покупку</h2>
    </div>
    <div class="col-lg-6">
    </div>
</div>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Тип оперции</th>
            <th>Пункт назначения</th>
            <th>Время</th>

            <th>Тип</th>
            <th>Производитель</th>
            <th>Модель</th>
            <th>Цена</th>
            <th>Статус</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (ComputerShop.Models.OperationEquipment d in ViewBag.PurchaseRequisition)
            {
                <tr>
                    <td>@d.Operation.GetOperationTypeString()</td>
                    <td>@d.Operation.Destination</td>
                    <td>@d.Operation.Time</td>

                    <td>@d.Equipment.GetEquipmentType()</td>
                    <td>@d.Equipment.Company</td>
                    <td>@d.Equipment.Model</td>
                    <td>@ComputerShop.Models.ComputerShopHelper.GetPriceFormat(d.Equipment.Price)</td>
                    <td>@d.Equipment.GetStatus()</td>
                    <td><a href="@Url.Action("SellPurchaseRequisition", "Shop", new { id = d.Operation.Id.ToString() })" class="btn btn-success btn-sm">Продать</a></td>
                    <td><a href="@Url.Action("CancelPurchaseRequisition", "Shop", new { id = d.Operation.Id.ToString() })" class="btn btn-danger btn-sm">Отменить</a></td>
                </tr>
            }
        }
    </tbody>
</table>



