@{
    ViewBag.Title = "Продано";
    Layout = "~/Views/Shared/_LayoutShop.cshtml";
}
<br />
<br />
<div class="row">
    <div class="col-lg-6">
        <h3>Распродажа компьютерной техники</h3>
    </div>
    <div class="col-lg-6">
    </div>
</div>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Тип</th>
            <th>Производитель</th>
            <th>Модель</th>
            <th>Цена</th>
            <th>Статус</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (ComputerShop.Models.Equipment b in ViewBag.Equipments)
            {
                <tr>
                    <td>@b.GetEquipmentType()</td>
                    <td>@b.Company</td>
                    <td>@b.Model</td>
                    <td>@ComputerShop.Models.ComputerShopHelper.GetPriceFormat(b.Price)</td>
                    <td>@b.GetStatus()</td>
                    <td></td>
                </tr>
            }
        }
    </tbody>
</table>
