@{
    ViewBag.Title = "В наличии";
}
<br />
<br />
<div class="row">
    <div class="col-lg-6">
        <h3>Распродажа компьютерной техники</h3>
    </div>
    <div class="col-lg-6">
        <a href="#" class="btn btn-primary" style="float:right"><span class="glyphicon glyphicon-plus" style="margin-right:10px"></span>Добавить товар</a>
    </div>
</div>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>#</th>
            <th>Тип</th>
            <th>Производитель</th>
            <th>Модель</th>
            <th>Цена</th>
            <th>Статус</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{int i = 1;
            foreach (var b in ViewBag.Equipments)
            {
                <tr>
                    <td>@i</td>
                    <td>@b.GetType()</td>
                    <td>@b.Company</td>
                    <td>@b.Model</td>
                    <td>@b.Price</td>
                    <td>@b.GetStatus()</td>
                    <td><a href="/Home/Buy/@b.Id">Купить</a></td>
                </tr>
                i++;
            }
        }
    </tbody>
</table>
