
@{
    ViewBag.Title = "Каталог";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="modal fade bs-example-modal-sm" id="mySmallModal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                @*<h4 class="modal-title">Форма оформления продажи</h4>*@
            </div>
            <div class="modal-body">
                <h5 class="modal-title"><span id="modalMessage"></span></h5>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Форма оформления покупки</h4>
            </div>
            <div class="modal-body">
                <input type="hidden" value="" id="modalId" name="EquipmentId" />
                <div class="form-group">
                    <label class="control-label col-lg-4">Ваше имя</label>
                    <div class="input-group col-lg-8">
                        <input type="text" class="form-control" placeholder="Введите Ваше имя" name="Destination">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
                <button type="submit" class="btn btn-primary" id="buttonBuy">Купить</button>
            </div>
        </div>
    </div>
</div>

<br />
<br />
<div class="row">
    <div class="col-lg-6">
        <h3>Распродажа компьютерной техники</h3>
    </div>
    <div class="col-lg-6">
    </div>
</div>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>#</th>
            <th>Тип</th>
            <th>Производитель</th>
            <th>Модель</th>
            <th>Цена</th>
            <th>Статус</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{int i = 1;
            foreach (var b in ViewBag.Equipments)
            {
                <tr>
                    <td>@i</td>
                    <td>@b.GetType()</td>
                    <td>@b.Company</td>
                    <td>@b.Model</td>
                    <td>@b.Price</td>
                    <td>@b.GetStatus()</td>
                    <td><a data-toggle="modal" data-target="#myModal" onclick="CatalogSetIdToSellModal('@b.Id')">Купить</a></td>
                    @*<td><a href="/Home/Buy/@b.Id">Купить</a></td>*@
                </tr>
                i++;
            }
        }
    </tbody>
</table>

