<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ComputerShop</title>
    <link href="~/fonts/glyphicons.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/bootstrap-select.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/bootstrap-select.js"></script>
    <script src="~/Scripts/common.js"></script>
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("5 Элемент", "InStock", "Shop", new { area = "" }, new { @class = "navbar-brand" })*@
                <div class="navbar-brand"><a href="@Url.Action("Index", "Home")"><i class="glyphicon glyphicon-imac"></i></a></div>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("В наличии", "InStock", "Shop")</li>
                    <li>@Html.ActionLink("Продано", "Sold", "Shop")</li>
                    <li>@Html.ActionLink("Операции", "Operations", "Shop")</li>
                    <li><a href="@Url.Action("PurchaseRequisition", "Shop")">Заявки на покупку  <span class="badge">@ViewBag.PurchaseRequisitionCount</span></a></li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>



    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - ComputerShop</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
